#:import Clipboard kivy.core.clipboard.Clipboard

MainLayout:

<MainLayout>:
	rows: 2
	padding: ('20dp', '20dp', '20dp', '20dp')
	spacing: '20dp'
	GridLayout:
		cols: 2
		spacing: '20dp'
		GridLayout:
			rows: 2
			spacing: '20dp'
			size_hint: None, 1
			width: '250dp'
			GridLayout:
				cols: 2
				size_hint: 1, None
				height: '30dp'
				Label:
					text: 'Key: '
					size_hint: None, 1
					size: self.texture_size
				TextInput:
					id: cipherKey
					multiline: False
					text: ''
					on_text: root.createTable(self.text)
					write_tab: False
			GridLayout:
				rows: 2
				Button:
					text: 'Encrypt' if root.encryptMode else 'Decrypt'
					size_hint: 1, None
					height: '30dp'
					on_press: root.toggleMode()
				GridLayout:
					rows: 5
					size_hint: 1, None
					padding: 0, '10dp'
					height: '270dp'
					GridLayout:
						cols: 5
						Label:
							text: root.tableText[0] if root.tableText else '-'
						Label:
							text: root.tableText[1] if root.tableText else '-'
						Label:
							text: root.tableText[2] if root.tableText else '-'
						Label:
							text: root.tableText[3] if root.tableText else '-'
						Label:
							text: root.tableText[4] if root.tableText else '-'
					GridLayout:
						cols: 5
						Label:
							text: root.tableText[5] if root.tableText else '-'
						Label:
							text: root.tableText[6] if root.tableText else '-'
						Label:
							text: root.tableText[7] if root.tableText else '-'
						Label:
							text: root.tableText[8] if root.tableText else '-'
						Label:
							text: root.tableText[9] if root.tableText else '-'
					GridLayout:
						cols: 5
						Label:
							text: root.tableText[10] if root.tableText else '-'
						Label:
							text: root.tableText[11] if root.tableText else '-'
						Label:
							text: root.tableText[12] if root.tableText else '-'
						Label:
							text: root.tableText[13] if root.tableText else '-'
						Label:
							text: root.tableText[14] if root.tableText else '-'
					GridLayout:
						cols: 5
						Label:
							text: root.tableText[15] if root.tableText else '-'
						Label:
							text: root.tableText[16] if root.tableText else '-'
						Label:
							text: root.tableText[17] if root.tableText else '-'
						Label:
							text: root.tableText[18] if root.tableText else '-'
						Label:
							text: root.tableText[19] if root.tableText else '-'
					GridLayout:
						cols: 5
						Label:
							text: root.tableText[20] if root.tableText else '-'
						Label:
							text: root.tableText[21] if root.tableText else '-'
						Label:
							text: root.tableText[22] if root.tableText else '-'
						Label:
							text: root.tableText[23] if root.tableText else '-'
						Label:
							text: root.tableText[24] if root.tableText else '-'
		GridLayout:
			rows: 2
			spacing: '20dp'
			TextInput:
				id: cipherMessage
				hint_text: 'Message...'
				on_text: root.setMessage(self)
				text: root.message
				write_tab: False
			ScrollView:
				do_scroll_x: False
				do_scroll_y: True
				Label:
					text: root.changedMessage
					size_hint_y: None
					height: self.texture_size[1]
					text_size: self.width, None
					on_touch_down: Clipboard.copy(root.changedMessage)
